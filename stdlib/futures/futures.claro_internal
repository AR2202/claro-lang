  $$END_JAVA
  return res;
}


function cancel<T>(f: future<T>, mayInterrupt: boolean) -> boolean {
  var res: boolean;
  $$BEGIN_JAVA
  res = f.cancel(mayInterrupt);
  $$END_JAVA
  return res;
}


