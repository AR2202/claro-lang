function immediateFuture<T>(t: T) -> future<T> {
  var res: future<T>;
  $$BEGIN_JAVA
  $$TYPES<T>
  res = new ClaroFuture(
    $$CLARO_TYPE(T),
    com.google.common.util.concurrent.Futures.immediateFuture(t));
  $$END_JAVA
  return res;
}


